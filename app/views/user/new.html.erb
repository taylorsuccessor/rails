<%= form_tag("/user", method: "post") do %>
  <%= label_tag(:name, "Search for:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Save") %>
<% end %>


<%
if @user && @user.errors.has_key?(:name)
%>
<%=@user.errors[:name].first() %>
<% end %>

<%
if @user && @user.errors.any?
  @user.errors.each do |attribute, message|
%>
<%= attribute %>
<%=message %>
<%
  end
  end
  %>